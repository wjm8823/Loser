<h1>Log in</h1>

<%= form_tag sessions_path do %>
<table>
  <tr><td><%= label_tag :name %></td><td><%= text_field_tag :name, params[:name] %></td></tr>
  <tr><td><%= label_tag :password %></td><td><%= password_field_tag :password %></td></tr>
</table>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>
