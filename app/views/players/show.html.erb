<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b><br>
  <%= @player.name %>
</p>
<table>
<tr><td colspan=2><u>Payments</u></td></tr>
<tr><th>Date</th><th>Amount</th></tr>
<% @payments.each do |payment| %>
   <tr><td><%= payment.created_at.strftime("%d%b%y") %></td><td>$&nbsp;<%= payment.amount %></td></tr>
<% end %>
</table><br>
<table>
<tr><td colspan=2><u>Weights</u></td></tr>
<tr><th>Week</th><th>Weight</th></tr>
<% @weights.each do |weight| %>
   <tr><td><%= weight.week %></td><td><%= weight.weight %></td></tr>
<% end %>
</table><br>
<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
