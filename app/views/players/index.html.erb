<table>
  <tr>
    <th>Name</th>
    <th>Week 1 <br><font size="1"><%= $week1 %></font></th>
    <th>Week 2 <br><font size="1"><%= $week2 %></font></th>
    <th>Week 3 <br><font size="1"><%= $week3 %></font></th>
    <th>Week 4 <br><font size="1"><%= $week4 %></font></th>
    <th>Week 5 <br><font size="1"><%= $week5 %></font></th>
    <th>Week 6 <br><font size="1"><%= $week6 %></font></th>
    <th>Total</th>
<% if current_user && current_user.name == 'admin' %>
    <th></th>
 <% end %>
  </tr>

  <% @players.each do |player| %>
  <tr>
    <td>
	<% if current_user && current_user.name == player.name %>
		<%= link_to player.name, player %>
	<% else %>
		<%=  player.name %>
	<% end %></td>
    <% @total = 0 %>
    <% 6.times do |i| %>
      <td>
      <% p = i.to_i + 1 %>
      <% if !player.weights[p.to_i].nil? && player.weights[p.to_i][:week]==p.to_i %>
        <%= player.weights[p.to_i].week_percent %>%
        <% @total = player.weights[p.to_i].total_percent %>
      <% end %>
      </td>
    <% end %>
       <td><font color=red><%= @total %>%</font></td>
   <% if current_user && current_user.name == 'admin' %>
	<td>
	<%= link_to 'Edit', edit_player_path(player) %> - 
    <%= link_to 'Destroy', player, confirm: 'Are you sure?', method: :delete %></td>
   <% end %></tr>
<% end %>
</table>
Total collected = <%= number_to_currency(@prize) %><br>
Weekly Prize = <%= number_to_currency(((@prize/2)/6)) %><br>
Grand Prize = <font style="background-color: yellow;"><%= number_to_currency((@prize/2)) %></font>
