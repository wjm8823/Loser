<h1>Listing weights</h1>

<table>
  <tr>
    <th>Week</th>
    <th>Weight</th>
    <th>Player</th>
    <th>Week loss</th>
    <th>Total loss</th>
    <th>Week percent</th>
    <th>Total percent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @weights.each do |weight| %>
  <tr>
    <td><%= weight.week %></td>
    <td><%= weight.weight %></td>
    <td><%= weight.player_id %></td>
    <td><%= weight.week_loss %></td>
    <td><%= weight.total_loss %></td>
    <td><%= weight.week_percent %></td>
    <td><%= weight.total_percent %></td>
    <td><%= link_to 'Show', weight %></td>
    <td><%= link_to 'Edit', edit_weight_path(weight) %></td>
    <td><%= link_to 'Destroy', weight, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

